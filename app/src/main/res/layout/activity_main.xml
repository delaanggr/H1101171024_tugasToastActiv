<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57D6C9"
    android:backgroundTint="#7ED6CE"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toast"
        android:layout_width="270dp"
        android:layout_height="108dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#4CAF50"
        android:gravity="center|center_horizontal"
        android:onClick="showToast"
        android:text="@string/button_label_toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/count_up"
        android:layout_width="268dp"
        android:layout_height="96dp"
        android:onClick="countUp"

        android:text="@string/button_label_CountUp"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/count_down"
        android:layout_width="267dp"
        android:layout_height="101dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:onClick="countDown"
        android:text="@string/button_label_countdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_up" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:gravity="center|center_horizontal"
        android:text="@string/_24"
        android:textAlignment="center"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/count_up"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="435dp" />

</androidx.constraintlayout.widget.ConstraintLayout>